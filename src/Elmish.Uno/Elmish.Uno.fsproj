<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Condition="'$(Configuration)' != 'Debug'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net5.0-windows10.0.19041.0</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <!--<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <DebugType>Embedded</DebugType>
    <EmbedAllSources>True</EmbedAllSources>
    <Authors>XperiAndri,dim-37</Authors>
    <Description>F# bindings for using Elmish in Uno</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/XperiAndri/Elmish.Uno</PackageProjectUrl>
    <PackageTags>Uno F# fsharp Elmish Elm</PackageTags>
    <PackageIcon>elmish-uno-logo-128x128.png</PackageIcon>
    <Version>1.0.0</Version>
    <PackageReleaseNotes></PackageReleaseNotes>-->

    <!--Turn on warnings for unused values (arguments and let bindings) -->
    <OtherFlags>$(OtherFlags) --warnon:1182</OtherFlags>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup Condition="$(TargetFramework.StartsWith('net5.0-windows10'))">
    <DefineConstants>$(DefineConstants);__UWP__</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <None Include="elmish-uno-logo-128x128.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>Elmish.Uno.Mobile</_Parameter1>
    </AssemblyAttribute>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>Elmish.Uno.Tests</_Parameter1>
    </AssemblyAttribute>
    <Compile Include="InternalUtils.fs" />
    <Compile Include="InternalTypes.fs" />
    <Compile Include="Config.fs" />
    <Compile Include="Binding.fs" />
    <Compile Include="Utils.fs" />
    <Compile Include="DynamicCustomProperty.fs" />
    <Compile Include="ViewModel.fs" />
    <Compile Include="ViewModelModule.fs" />
    <Compile Include="Program.fs" />
    <Compile Include="Navigation.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Elmish" Version="3.1.0" />
    <PackageReference Include="FSharp.Collections.Immutable" Version="2.0.0-*" />
    <PackageReference Include="Microsoft.ProjectReunion.WinUI" Version="0.5.7" Condition="$(TargetFramework.StartsWith('net5.0-windows10'))" />
    <PackageReference Include="Uno.Core" Version="2.4.0" />
    <PackageReference Include="Uno.WinUI" Version="3.8.6" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="5.0.*" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework.StartsWith('net5.0-windows10'))">
    <FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" RuntimeFrameworkVersion="10.0.18362.16" />
    <FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" TargetingPackVersion="10.0.18362.16" />
  </ItemGroup>

  <Target Name="XamlPreCompile" Condition="$(TargetFramework.StartsWith('net5.0-windows10'))" />

</Project>
